<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="abc.file_distribution.filesystem_manager.class">Abc\Bundle\FileDistributionBundle\Doctrine\FilesystemManager</parameter>
        <parameter key="abc.file_distribution.model.filesystem.class">Abc\Bundle\FileDistributionBundle\Entity\Filesystem</parameter>
    </parameters>

    <services>
        <service id="abc.file_distribution.filesystem_manager.default" class="%abc.file_distribution.filesystem_manager.class%" public="false">
            <argument type="service" id="abc.file_distribution.entity_manager" />
            <argument>%abc.file_distribution.model.filesystem.class%</argument>
        </service>
    </services>

</container>