{% block dynamic_form_widget %}
    {% spaceless %}
        {{ block('choice_widget') }}
        <script>
            var $changeKey = jQuery('#{{ id }}');
            $changeKey.change(function () {
                var $form = jQuery(this).closest('form');
                var data = $form.serializeArray();
                $changeKey.parent().html('<img src="/bundles/abcfiledistribution/images/ajax-loader-transparent.gif" alt="Loading data" >');
                jQuery.ajax({
                    url: $form.attr('action'),
                    type: $form.attr('method'),
                    data: data,
                    success: function (html) {
                        $form.html(
                                jQuery(html).closest('form').html()
                        );
                    }
                });
            });
        </script>
    {% endspaceless %}
{% endblock %}

