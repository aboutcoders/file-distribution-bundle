{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'Create location'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.path) }}
    {{ form_row(form.url) }}
    {{ form_row(form.type) }}
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <a href="{{ path('location') }}" class="btn">{{ 'Cancel'|trans }}</a>
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
