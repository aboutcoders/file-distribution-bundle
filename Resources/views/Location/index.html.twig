{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Location list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Path</th>
            <th>Url</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('location_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('location_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('location_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
